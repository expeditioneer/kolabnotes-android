<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_round"
    android:clickable="true"
    android:focusable="true"
    android:hapticFeedbackEnabled="true"
    android:orientation="horizontal"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <View
            android:id="@+id/tagColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/tag_list_default_circle"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tagName"
                style="@style/NoteOverviewSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/md_black_1000" />

            <TextView
                android:id="@+id/tagCreatedDate"
                style="@style/NoteOverviewInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/md_black_1000" />

            <TextView
                android:id="@+id/tagModificationDate"
                style="@style/NoteOverviewInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/md_black_1000" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>