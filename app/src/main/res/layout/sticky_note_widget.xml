<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sticky_widget_border"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/sticky_note_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/md_yellow_A700"
            android:clickable="true"
            android:enabled="true"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/sticky_note_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_yellow_A700"
            android:bufferType="spannable"
            android:clickable="true"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine|textWebEditText"
            android:isScrollContainer="true"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:scrollbars="vertical"
            android:scrollHorizontally="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

    </LinearLayout>
</FrameLayout>